/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
} 
.left-view {
  height: 100%;
  padding-top: 50rpx;
  padding-left: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.inputContainer{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 10pt;
  margin-top: 70rpx;
}
.input {
  width: 100rpx;
  border: 0.5px solid grey;
  border-radius: 5px;
  padding: 0px 3px;
}
.search-button{
  padding: 7rpx;
  padding-bottom: 15rpx;
  width: 100rpx!important;
  height: 50rpx;
  font-size: 10pt;
  font-weight: 100;
}

.displayContainer{
  margin-top: 20rpx;
}

.h1 {
  font-size: 16pt;
}

.h2 {
  font-size: 13pt;
}

.p {
  font-size: 10pt;
}
